<%- include('nologinheader'); -%>
<head>
    <style>
        .card {
          box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
          transition: 0.3s;
          width: 40%;
        }

        .card:hover {
          box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

        .container {
          padding: 2px 16px;
        }
            html,body {
          background-color: RGB(52, 73, 94);
        }
    </style>
</head>

<div style="margin-left: 60px;" class="col-md-11 content">
            <% 
                if(cdata.length!=0){
                    
                    cdata.forEach(function(data){
                    %>
    <div class="card" style="float: left;width: 31.1%;height: auto; margin: 15px;">
    <form class="form-inline" method="post" action="/charity" >
              <img src=<%= "/"+data.cover %> alt= "Sorry,image not available" style="width:100%">
              <div style="padding: 30px;">
                <h3><b><%=data.name %></b></h3><br>
                <input type="hidden" id='p1' name="purpose" value=<%=data.purpose %>>
                <input type="hidden" id='p2' name="founder" value=<%=data.founder %>>
                <p style="width: 100%;">Purpose : <%=data.purpose %></p>
                <p style="width: 100%;">Founder : <%=data.founder %></p>
              </div>
              
        <button style="margin-left: 45%;margin-bottom: 5%;" type="submit" class="btn btn-primary btn-md"
                  value="submit" name="char">
                  Donate
        </button>
    </form>
    </div>
    <%
})
}
 %>
</div>
     <script>
     $(document).ready(function(){
         $('.navbar ul li.active').removeClass("active");
         $('.navbar ul li:nth-child(1)').addClass("active");
         $("form").submit(function(e){
           $sdate = new  Date( $("input:first").val() );
           $edate = new Date( $("input:odd").val() );
           if($sdate > $edate) {
             e.preventDefault();
             $('p#error').text("Date range is invalid").show().fadeOut(2101);
           }
         });
     });
     </script>
   </body>
</html>