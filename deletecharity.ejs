<%- include('headeradmin'); -%>
<div style="margin-left: 60px;" class="col-md-11 content">
  <% if(smsg.length>0) { %>
    <div class="alert alert-success"><%=smsg %></div>
    <% } %>
    <% if(emsg.length>0) { %>
      <div class="alert alert-danger"><%=emsg %></div>
      <% } %>
             <div>
             <form class="form-inline" method="post" action="/deletecharity" >
             <table  id="example" class="table table-striped">
                 <thead>
                   <tr>
                    <th></th>
                     <th>founder</th>
                     <th>Name of charity</th>
                     <th>Purpose</th>
                     <th>Src</th>
                   </tr>
                 </thead>
               </thead>
               <tbody>
                <% 
                    if(pddata.length!=0){
                        pddata.forEach(function(data){
                        %>
                                 <tr>
                                        <td>
                                          <input type="checkbox" name="selected[]"  value=<%=data.id %> />
                                        </td>
                                         <td><%=data.name %></td>
                                         <td><%=data.purpose %></td>
                                         <td><%=data.founder %></td>
                                         <td><%=data.cover %></td>
                                 </tr>
                                 <%
                                })
                            }
                                 %> 
               </tbody>
               </table>
               <input type="submit" class="btn btn-primary btn-md"
                      value="delete" name="delete">
             </form>
             </div>
         </div>
     </div>
     <script>
     $(document).ready(function(){
         $('.navbar ul li.active').removeClass("active");
         $('.navbar ul li:nth-child(4)').addClass("active");
     });
     </script>
   </body>
</html>